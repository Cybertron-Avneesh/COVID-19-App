<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/virus"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/autour_one"
                android:text="Global COVID-19 Stats"
                android:textAlignment="center"
                android:textColor="#673AB7"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/totalCases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:capitalize="sentences"
                    android:fontFamily="@font/macondo_swash_caps"
                    android:text="Total Cases"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_conversion_absoluteWidth="206dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />

                <TextView
                    android:id="@+id/total_cases"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nosifer"
                    android:text="0"
                    android:textAlignment="viewEnd"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_conversion_absoluteWidth="205dp"
                    tools:layout_editor_absoluteX="206dp"
                    tools:layout_editor_absoluteY="0dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/recoverd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:capitalize="sentences"
                    android:fontFamily="@font/macondo_swash_caps"
                    android:text="Total Recovered"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_conversion_absoluteWidth="221dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="24dp" />

                <TextView
                    android:id="@+id/total_recovered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nosifer"
                    android:text="0"
                    android:textAlignment="viewEnd"
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_conversion_absoluteWidth="190dp"
                    tools:layout_editor_absoluteX="221dp"
                    tools:layout_editor_absoluteY="24dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/unresolved"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:capitalize="sentences"
                    android:fontFamily="@font/macondo_swash_caps"
                    android:text="Total Unresolved"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_conversion_absoluteWidth="225dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="48dp" />

                <TextView
                    android:id="@+id/total_unresolved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nosifer"
                    android:text="0"
                    android:textAlignment="viewEnd"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_conversion_absoluteWidth="186dp"
                    tools:layout_editor_absoluteX="225dp"
                    tools:layout_editor_absoluteY="48dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/totaldeaths"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:capitalize="sentences"
                    android:fontFamily="@font/macondo_swash_caps"
                    android:text="Total Deaths"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_conversion_absoluteWidth="210dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="72dp" />

                <TextView
                    android:id="@+id/total_deaths"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nosifer"
                    android:text="0"
                    android:textAlignment="viewEnd"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_conversion_absoluteWidth="202dp"
                    tools:layout_editor_absoluteX="210dp"
                    tools:layout_editor_absoluteY="72dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/new_cases_today"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:capitalize="sentences"
                    android:fontFamily="@font/macondo_swash_caps"
                    android:text="Total New Cases Today"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_conversion_absoluteWidth="251dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="96dp" />

                <TextView
                    android:id="@+id/total_new_cases_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nosifer"
                    android:text="0"
                    android:textAlignment="viewEnd"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_conversion_absoluteWidth="160dp"
                    tools:layout_editor_absoluteX="251dp"
                    tools:layout_editor_absoluteY="96dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/newdeaths"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:capitalize="sentences"
                    android:fontFamily="@font/macondo_swash_caps"
                    android:text="Total New Deaths Today"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_conversion_absoluteWidth="255dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="120dp" />

                <TextView
                    android:id="@+id/total_new_deaths_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nosifer"
                    android:text="0"
                    android:textAlignment="viewEnd"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_conversion_absoluteWidth="157dp"
                    tools:layout_editor_absoluteX="255dp"
                    tools:layout_editor_absoluteY="120dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/activeCases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:capitalize="sentences"
                    android:fontFamily="@font/macondo_swash_caps"
                    android:text="Total Active Cases"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_conversion_absoluteWidth="233dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="144dp" />

                <TextView
                    android:id="@+id/total_active_cases"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nosifer"
                    android:text="0"
                    android:textAlignment="viewEnd"
                    android:textColor="#FFC107"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_conversion_absoluteWidth="178dp"
                    tools:layout_editor_absoluteX="233dp"
                    tools:layout_editor_absoluteY="144dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/seriousCase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:capitalize="sentences"
                    android:fontFamily="@font/macondo_swash_caps"
                    android:text="Total Serious Cases"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_conversion_absoluteWidth="238dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="168dp" />

                <TextView
                    android:id="@+id/total_serious_cases"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nosifer"
                    android:text="0"
                    android:textAlignment="viewEnd"
                    android:textColor="#FF5722"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_conversion_absoluteWidth="173dp"
                    tools:layout_editor_absoluteX="238dp"
                    tools:layout_editor_absoluteY="168dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnHeatMap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/orbitron"
        android:text="Global COVID-19 (Heat Map)"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtCreator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAnyCountry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:autoText="true"
        android:fontFamily="@font/orbitron"
        android:text="Search Particular Country "
        android:textColor="#F57C00"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnHeatMap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/happy_monkey"
        android:text="App Requires Fast Internet Connection"
        android:textSize="8sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCreator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/orbitron"
        android:text="made by - Cy63rtr0N_4vn335H"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#1976D2"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/ic_refresh_black_24dp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/orbitron"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnRefresh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/progressBar" />

    <Button
        android:id="@+id/btnIRA"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/orbitron"
        android:text="Infection Risk Analyser "
        android:textColor="#388E3C"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnInteractiveMap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnInteractiveMap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/orbitron"
        android:text="Interactive Globe"
        android:textColor="#0097A7"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnAnyCountry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>